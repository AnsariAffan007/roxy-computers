            <div class="cards-container row g-4 pb-5">

                <% issues.forEach(function(issue) { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-subtitle mb-3 text-muted"><%=issue.companyName%></h5>
                                <h5 class="card-title mb-3"><%= issue.name %></h5>
                                <p class="card-text">Contact: <%=issue.contactNo%></p>
                                <p class="card-text">Email: <%=issue.email%></p>
                                <p class="card-text">Problem Title: <%=issue.problemTitle%></p>
                                <a href="/issue/<%=issue.name%>" class="btn btn-sm btn-outline-dark">View Details</a>
                                <form action="/delete/<%=issue.name%>" method="post" class="d-inline">
                                    <button href="#" type="Submit" class="btn btn-sm btn-outline-dark">Delete</button>
                                </form>
                            </div>
                            <div class="card-footer text-muted">
                                <i class="bi bi-calendar"></i> <span><%=issue.dateOfReport%></span>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
